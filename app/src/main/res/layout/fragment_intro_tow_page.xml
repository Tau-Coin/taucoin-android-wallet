<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="io.taucoin.android.wallet.module.view.intro.IntroPageOneFragment">


    <ImageView
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/intro_tow"
        android:id="@+id/image"
        android:scaleType="centerInside"
        android:layout_width="200dp"
        android:layout_marginBottom="100dp"
        android:layout_height="200dp" />



    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:textSize="20dp"
                android:padding="8dp"
                android:text="First Transaction"
                android:textColor="#907be3"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:paddingLeft="@dimen/dimen_size_32"
                android:paddingRight="@dimen/dimen_size_32"
                android:padding="8dp"
                android:text="@string/first_transaction"
                android:textColor="#9198b2"
                android:textStyle="normal"
                />



        </LinearLayout>





    </RelativeLayout>

</RelativeLayout>
